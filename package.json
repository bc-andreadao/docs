{
  "name": "mdx-linter-devdocs",
  "version": "1.0.0",
  "description": "Lints and otherwise helps improve DevDocs in MDX format.",
  "main": "index.js",
  "directories": {
    "example": "examples"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "lint": "eslint ./docs ./examples ./theme-styles --ext mdx --max-warnings 0"
  },
  "repository": {
    "type": "git",
    "url": "null"
  },
  "keywords": [
    "lint",
    "mdx",
    "eslint",
    "docs-as-code"
  ],
  "devDependencies": {
    "eslint": "^8.34.0",
    "eslint-plugin-mdx": "^2.0.5",
    "remark": "^13.0.0",
    "remark-cli": "^12",
    "remark-lint": "^10.0.0",
    "remark-lint-no-dead-urls": "^1.1.0"
  },
  "remarkConfig": {
    "plugins": [
      "remark-lint",
      "remark-lint-no-dead-urls"
    ]
  },
  "author": "Matthew Volk"
}
